<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/new_backg" >

    <TextView
        android:id="@+id/startscreen_welcomeMess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="@string/MainScreen_Mess"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/SchoolSoft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startscreen_welcomeMess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/schoolsoft_button" />

    <Button
        android:id="@+id/schema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/SchoolSoft"
        android:background="@drawable/schema_button" />

    <Button
        android:id="@+id/matsedel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/schema"
        android:layout_alignBottom="@+id/schema"
        android:layout_alignParentRight="true"
        android:background="@drawable/matsedel_button" />

    <Button
        android:id="@+id/karta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/knappkarta" />

    <Button
        android:id="@+id/news"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/newsknapp"
        android:text="" />

    <TextView
        android:id="@+id/Week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
